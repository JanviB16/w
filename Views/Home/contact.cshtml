@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container col-lg-12" style="margin-top:150px;">
    <div class="row">
        <div class="col-lg-7">
            <div class="row">
                <div class="col-md-12 my-2">
                    <div class="card p-4 mb-0" style="border-radius: 20px; ">
                        <h3 class="fw-bold" style="margin-bottom: 20px; margin-left:20px;">Olympian Martial Arts</h3>
                        <p style="margin-left:20px;"><span><i class="fa-solid fa-location-dot text-danger" style=" margin-right: 10px;font-size:20px;"></i></span>1920 Ellesmere Rd (Bellamy & Ellesmere) Unit #002 (Lower Level),<br> Scarborough, ON M1H 2V6</p>
                        <p><span><i class="fa-solid fa-phone text-danger" style=" margin-right: 10px; font-size:20px;margin-left:20px;"></i></span>416-366-6661</p>
                        <p><span><i class="fa-solid fa-envelope text-danger" style=" margin-right: 10px;font-size:20px;margin-left:20px;"></i></span>olympianmartialarts@msn.com</p>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="map-container col-lg-12">
                        <iframe style="border-radius: 20px;" src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2880.8994100305163!2d-79.24297268427414!3d43.77494685256714!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x89d4d0543f11892b%3A0x96b695179d4b51b!2sOlympian%20Martial%20Arts!5e0!3m2!1sen!2sca!4v1570202288310!5m2!1sen!2sca"
                                 frameborder="0" allowfullscreen=""></iframe>
                    </div>
                </div>
            </div>

        </div>
        <div class="col-lg-5">
            <h2 class="text-center" style="margin-top: 40px;"><b>CONTACT US</b></h2>
            <p class="text-center">Thank you for your interest! We will reach out to you within 1-3 days</p>
            <br>
            <form id="contactForm" action="#" method="POST" data-form-title="CONTACT US">
                <input type="hidden" data-form-email="true">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input type="text" class="form-control" name="name" required="" placeholder="Enter Full name"
                           data-form-field="Name" required>
                </div>
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" class="form-control" name="email" required="" placeholder="Enter Email"
                           data-form-field="Email" required>
                </div>
                <div class="form-group">
                    <label for="phone">Phone</label>
                    <input type="tel" class="form-control" name="phone" placeholder="Enter Phone number"
                           data-form-field="Phone" required>
                </div>
                <div class="form-group">
                    <label for="message">Message</label>
                    <textarea class="form-control" name="message" placeholder="Enter Message" rows="3"
                              data-form-field="Message"></textarea>
                </div>
                <div class="form-group">
                    <div class="form-check">
                        <input type="checkbox" id="consentCheckbox" name="consentCheckbox" class="form-check-input"
                               required>
                        <label for="consentCheckbox"
                               class="form-check-label"> I consent to Olympian Martial Arts Studio collecting my details through this form and agree to the Privacy Policy.</label>
                    </div>
                </div><br>
                <div class="center-button">
                    <button id="submitButton" type="submit" class="btn btn-lg btn-primary col-9">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>